<?xml version="1.0" encoding="utf-8"?>
<!--
    shape를 이용하여 토스트 모양 변환.
    shape 속성에서 모양을 지정할 수 있다.
    android:shape="속성"
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!--테두리 설정-->
    <stroke
        android:width="3dp"
        android:color="#00f"/>

    <!--배경색 지정. ex) 재질, 단색 등-->
    <solid
        android:color="#a22"/>

    <!--padding 설정-->
    <padding
        android:left="20dp"
        android:top="20dp"
        android:right="20dp"
        android:bottom="20dp"/>

    <!--모서리 둥글게-->
    <corners
        android:radius="20dp"/>

</shape>